<h1>{{ title }}</h1>
<div>
    <button onclick="location.href='/select1'">Select</button >
</div>
<table>
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Participants</td>
        <td>Professor</td>
        <td>Did</td>
        <td>Rid</td>
    </tr>
    {{#each clas}}
        <form method="post">
            <tr>
                <td><input type="text" name="ID" value="{{ID}}" readonly></td>
                <td><input type="text" name="Name" value="{{Name}}"></td>
                <td><input type="text" name="Participants" value="{{Participants}}"></td>
                <td><input type="text" name="Professor" value="{{Professor}}"></td>
                <td><input type="text" name="Did" value="{{Did}}"></td>
                <td><input type="text" name="Rid" value="{{Rid}}"></td>
                <td style="border: none; margin-left: 10px;">
                    <button
                        style="margin-left: 10px;"
                        name='delBtn'
                        type="submit"
                        value="{{ID}}"
                        formaction="/class/delete">
                        삭제
                    </button>
                    <button
                        style="margin-left: 10px;"
                        name='upBtn'
                        type="submit"
                        formaction="/class/update">
                        수정
                    </button>
                </td>
            </tr>
        </form>
    {{/each}}
</table>

<form name="class" method="post" action="/insert">
    <div>
        <label for="Name">Name</label>
        <input id="Name" name="Name" type="text" required placeholder="Name" />
    </div>
    <div>
        <label for="Participants">Participants</label>
        <input id="Participants" name="Participants" type="text" required  placeholder="Participants" />
    </div>
    <div>
        <label for="Professor">Professor</label>
        <input id="Professor" name="Professor" type="text" required placeholder="Professor" />
    </div>
    <div>
        <label for="Did">Did</label>
        <input id="Did" name="Did" type="text" required placeholder="Did" />
    </div>
    <div>
        <label for="Rid">Rid</label>
        <input id="Rid" name="Rid" type="text" required placeholder="Rid" />
    </div>
    <div>
        <button
            style="margin-left: 10px;"
            name='insertBtn'
            type="submit"
            formaction="/class/insert">
            추가
        </button>
    </div>
</form>